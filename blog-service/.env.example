# Application
APP_NAME=blog-service
APP_ENV=development
APP_PORT=8082
APP_DEBUG=true

# Database
POSTGRES_HOST=blog-db
POSTGRES_PORT=5432
POSTGRES_DB=blog_db
POSTGRES_USER=blog_user
POSTGRES_PASSWORD=blog_password
DB_SSL_MODE=disable

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h

# Logging
LOG_LEVEL=debug

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080